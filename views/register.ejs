<!-- Register -->
<main class="register">
    <h2>Register</h2>
    <form class="register" action="/users/create" method="post">
      <label for="username">Username:</label><br>
      <input type="text" id="username" class="registerInput" name="username"><br>
      <label for="password">Password:</label><br>
      <input type="password" id="password" class="registerInput" name="password"><br>
      <label for="password2">Confirm Password:</label><br>
      <input type="password" id="password2" class="registerInput" name="password2">
      <input type="submit" class="registerSubmit" value="Create Account">
    </form>
</main>

